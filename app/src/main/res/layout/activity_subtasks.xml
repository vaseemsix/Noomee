<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary">
	
	<android.support.v7.widget.RecyclerView
		android:id="@+id/activity_subtasks__list_subtasks"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="@dimen/spacing_enormous"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:listitem="@layout/view_item_subtask"/>
	
	<LinearLayout
		android:id="@+id/activity_subtasks__title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@drawable/xml_gradient_bg"
		android:orientation="vertical"
		android:gravity="center"
		android:padding="@dimen/spacing_huge"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<TextView
			android:id="@+id/activity_subtasks__txt_title"
			style="@style/HeadingText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:maxLines="1"
			android:text="@string/welcome" />
		
		<TextView
			android:id="@+id/activity_subtasks__txt_sub_title"
			style="@style/SubHeadingText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/spacing_small"
			android:gravity="center"
			android:maxLines="2"
			android:text="@string/welcome" />
		
	</LinearLayout>

</android.support.constraint.ConstraintLayout>