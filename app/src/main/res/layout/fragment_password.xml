<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	android:padding="@dimen/spacing_normal">
	
	<EditText
		android:id="@+id/fragment_password__edt_pass"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:hint="@string/hint_password"
		android:inputType="textPassword"
		android:textSize="@dimen/font_normal"
		android:layout_margin="@dimen/spacing_normal"
		app:layout_constraintBottom_toTopOf="@id/fragment_password__btn_submit"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed" />
	
	<com.unknown.numee.util.widget.ButtonView
		android:id="@+id/fragment_password__btn_submit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_tiny"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/fragment_password__edt_pass"
		app:text="@string/submit" />

</android.support.constraint.ConstraintLayout>