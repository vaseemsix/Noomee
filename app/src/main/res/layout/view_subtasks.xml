<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<android.support.constraint.Guideline
		android:id="@+id/view_subtasks__gdl_middle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.6" />
	
	<android.support.v7.widget.CardView
		android:id="@+id/view_subtasks__to_do"
		android:layout_width="@dimen/size_normal"
		android:layout_height="@dimen/size_normal"
		android:layout_margin="@dimen/spacing_normal"
		android:alpha="0.6"
		app:contentPadding="@dimen/spacing_tiny"
		app:cardBackgroundColor="@android:color/white"
		app:cardCornerRadius="@dimen/spacing_small"
		app:cardElevation="@dimen/elevation_none"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="@id/view_subtasks__gdl_middle"
		app:layout_constraintTop_toTopOf="parent">
		
		<ImageView
			android:id="@+id/view_subtasks__img_to_do"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:alpha="0.6"
			android:scaleType="centerCrop"
			tools:ignore="ContentDescription" />
	
	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		android:id="@+id/view_subtasks__current"
		android:layout_width="@dimen/size_medium"
		android:layout_height="@dimen/size_medium"
		android:layout_margin="@dimen/spacing_normal"
		app:contentPadding="@dimen/spacing_tiny"
		app:cardBackgroundColor="@android:color/white"
		app:cardCornerRadius="@dimen/spacing_small"
		app:cardElevation="@dimen/elevation_small"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<ImageView
			android:id="@+id/view_subtasks__img_current"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			tools:ignore="ContentDescription" />
	
	</android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>