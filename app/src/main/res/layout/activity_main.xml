<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary">

	<View
		android:layout_width="24dp"
		android:layout_height="48dp"
		android:padding="@dimen/spacing_tiny"
		android:background="@android:color/white"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/activity_main__content"
		app:layout_constraintStart_toStartOf="parent"
		tools:ignore="ContentDescription" />
	
	<View
		android:id="@+id/activity_main__view_switch"
		android:layout_width="24dp"
		android:layout_height="48dp"
		android:padding="@dimen/spacing_tiny"
		android:background="@android:color/white"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/activity_main__content"
		app:layout_constraintEnd_toEndOf="parent"
		tools:ignore="ContentDescription" />
	
	<FrameLayout
		android:id="@+id/activity_main__content"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/activity_main__view_switch"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">
		
	</FrameLayout>

</android.support.constraint.ConstraintLayout>