<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<TextView
		android:id="@+id/view_spinner__txt_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:padding="@dimen/spacing_tiny"
		android:text="@string/diagnose"
		android:textSize="@dimen/font_tiny"
		android:textColor="@android:color/darker_gray"
		app:layout_constraintBottom_toTopOf="@id/view_spinner__content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed" />
	
	<Spinner
		android:id="@+id/view_spinner__content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_tiny"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/view_spinner__txt_title" />

</android.support.constraint.ConstraintLayout>